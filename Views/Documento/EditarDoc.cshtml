@model DocumentosModel
@{
    ViewData["title"] = "Editar Documento";
}


<div class="container p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1>Edição de Documentos</h1>
    </div>

    <form method="post" asp-controller="Documento" asp-action="EditarDoc">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Documento" class="form-label">Nome do documento:</label>
            <input type="text" class="form-control" asp-for="Modulo" id="Documento">
            <span class="text-danger" asp-validation-for="Modulo"></span>
        </div>

        <div class="mb-3">
            <label for="Conteudo" class="form-label">Conteúdo do documento:</label>
            <textarea class="form-control" asp-for="Conteudo" id="Conteudo" rows="3"></textarea>
            <span class="text-danger" asp-validation-for="Conteudo"></span>

        </div>
        <div class="d-flex gap-5 mt-5">
            <a class="btn btn-primary w-50" asp-controller="Documento" asp-action="IndexDoc">Voltar</a>
            <button type="submit" class="btn btn-primary w-50">Editar</button>
        </div>
    </form>
</div>