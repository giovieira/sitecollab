@using CollabBridge.Enums;
@model UsuarioModel
@{
    ViewData["title"] = "Cadastrar Usuário";
}


<div class="container p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1>Cadastro de Usuários</h1>
    </div>

<form method="post" asp-controller="Usuario" asp-action="CadastrarUser">

        <div>
            <label for="Usuário" class="form-label">Nome do usuário:</label>
            <input type="text" class="form-control" asp-for="Nome" id="Usuário">
            <span class="text-danger" asp-validation-for="Nome" ></span>
        </div>
        <div>
            <label for="Usuário" class="form-label">E-mail do usuário:</label>
            <input type="text" class="form-control" asp-for="Email" id="Usuário">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>        
        <div>
            <label for="Usuário" class="form-label">Login do usuário:</label>
            <input type="text" class="form-control" asp-for="Login" id="Usuário">
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>        
        <div>
            <label for="Usuário" class="form-label">Senha do usuário:</label>
            <input type="password" class="form-control" asp-for="Password" id="Usuário">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>        
        <div>
            <select asp-for="Perfil" class="form-control">
                <option value="0">Selecione</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
        </div>
        <div class="d-flex gap-5 mt-5">
            <a class="btn btn-primary w-50" asp-asp-controller="Usuario" asp-action="IndexUser">Voltar</a>
            <button type="submit" class="btn btn-primary w-50">Adicionar</button>
        </div>
</form>
</div>