@model IEnumerable<UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Usuários</h1>
        <a class="btn btn-primary mx-2" asp-controller="Usuario" asp-action="CadastrarUser">Cadastrar Novo Usuário</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Login</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {

                @foreach (var usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Nome</th>
                        <td>@usuario.Email</td>
                        <td>@usuario.Perfil</td>
                        <td>@usuario.Login</td>
                        <td>
                            <a asp-controller="Usuario" asp-action="EditarUser" asp-route-id="@usuario.Id" class="btn btn-outline-primary mx-2">Editar</a>
                            <a asp-controller="Usuario" asp-action="ExcluirUser" asp-route-id="@usuario.Id" class="btn btn-danger mx-2">Excluir</a>

                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>