@model UsuarioModel
@{
    ViewData["title"] = "Editar Usuario";
}


<div class="container p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1>Edição de Usuário</h1>
    </div>

    <form method="post" asp-controller="Usuario" asp-action="EditarUser">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Usuário" class="form-label">Nome do usuário:</label>
            <input type="text" class="form-control" asp-for="Nome" id="Usuário">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label for="Usuário" class="form-label">E-mail do usuário:</label>
            <input type="text" class="form-control" asp-for="Email" id="Usuário">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>        <div class="mb-3">
            <label for="Usuário" class="form-label">Login do usuário:</label>
            <input type="text" class="form-control" asp-for="Login" id="Usuário">
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>        <div class="mb-3">
            <label for="Usuário" class="form-label">Senha do usuário:</label>
            <input type="text" class="form-control" asp-for="Password" id="Usuário">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>        <div class="mb-3">
            <label for="Usuário" class="form-label">Cargo do usuário:</label>
            <input type="text" class="form-control" asp-for="Perfil" id="Usuário">
            <span class="text-danger" asp-validation-for="Perfil"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <a class="btn btn-primary w-50" asp-asp-controller="Usuario" asp-action="IndexUser">Voltar</a>
            <button type="submit" class="btn btn-primary w-50">Editar</button>
        </div>
    </form>
</div>