@model LoginModel
@{
    Layout = "_LayoutDeslogada";
}

@{
    ViewData["Title"] = "Página Inicial";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="text-center">
                <h1 class="display-4">Bem-vindo ao CollabBridge!</h1>
                <p>Faça o login para ter acesso a sua área de trabalho.</p>
                <form asp-controller="Login" asp-action="Entrar" method="post">
                    <div class="form-group">
                        <input type="text" asp-for="Login" class="form-control" id="username" placeholder="Digite seu usuário aqui">
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Senha" class="form-control" id="password" placeholder="Digite sua senha aqui">
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <img src="/img/img.png" alt="Imagem" class="img-fluid">
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    form {
        max-width: 300px;
        margin: 0 auto;
    }

    img {
        max-width: 100%;
        height: auto;
    }
</style>
